{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": 2,
        "no-console": 1,
        "no-var": 2,
        "no-useless-rename": 1,
        "no-useless-escape": 0
    }
}